@model ProfileWeb.Models.ApplicationUser

@{
    ViewData["Title"] = "Зерттеу жұмыстары";
}

<h1></h1>

<h4>Зерттеулер жұмыстармен жетістіктерді қосу</h4>
<hr />
<div class="col-md-6 col-md-offset-2">
    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*ExpTable*@
        <div class="col-md-12">
            <table id="ExpTable" class="table">
                <thead>
                    <tr>
                        <th>
                            ЗЕРТТЕУ ЖҰМЫСТАРЫ, ЖАРИЯЛАНЫМДАРЫ (ПРИОРИТЕТТІ БАҒЫТТАРЫ):
                        </th>
                        <th>
                            ФАЙЛ:
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Researches.Count; i++)
                    {
                        <tr>
                            <td>
                                @if (@Model.Researches[i].KZ_Title != null)
                                {
                                    @*@Html.DisplayFor(model => model.Researches[i].KZ_Title)*@
                                    <input asp-for="@Model.Researches[i].KZ_Title" class="form-control" readonly/>
                                }
                                else
                                {
                                    <input asp-for="@Model.Researches[i].KZ_Title" class="form-control" />
                                }
                            </td>
                            <td>
                                @if (@Model.Researches[i].FileUrl != null)
                                {
                                    <input asp-for="@Model.Researches[i].FileUrl" class="form-control" readonly/>
                                    @*<a class="btn btn-primary" href="~/documents/@Model.Researches[i].FileUrl" target="_blank">ОҚУ</a>*@
                                }
                                else
                                {

                                    <input type="file"
                                           asp-for="@Model.Researches[i].Document"
                                           accept=".pdf" class="form-control" />}
                            </td>
                            <td>
                                <button id="btnadd-@i" type="button" class="btn btn-secondary visible"
                                        onclick="AddItem1(this)">
                                    Қосу
                                </button>

                            </td>
                            <td>
                                <button id="btnremove-@i" type="button" class="btn btn-danger invisible"
                                        onclick="DeleteItem1(this)">
                                    Жою
                                </button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>


            <input type="hidden" id="hdnLastIndex" value="@(Model.Researches?.Count != null ? Model.Researches.Count-1 : 0)" />
            @*ExpTable*@

        </div>
      
        

        <div class="form-group">
            <input type="submit" value="Сақтау" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">Өз профиліңізге өту</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });


    //ExpTable
    function DeleteItem1(btn) {
        $(btn).closest('tr').remove();
    }



    function AddItem1(btn) {

        var table = document.getElementById('ExpTable');
        var rows = table.getElementsByTagName('tr');

        var rowOuterHtml = rows[rows.length - 1].outerHTML;

        var lastrowIdx = document.getElementById('hdnLastIndex').value;

        var nextrowIdx = eval(lastrowIdx) + 1;

        document.getElementById('hdnLastIndex').value = nextrowIdx;

        rowOuterHtml = rowOuterHtml.replaceAll('_' + lastrowIdx + '_', '_' + nextrowIdx + '_');
        rowOuterHtml = rowOuterHtml.replaceAll('[' + lastrowIdx + ']', '[' + nextrowIdx + ']');
        rowOuterHtml = rowOuterHtml.replaceAll('-' + lastrowIdx, '-' + nextrowIdx);


        var newRow = table.insertRow();
        newRow.innerHTML = rowOuterHtml;



        var btnAddID = btn.id;
        var btnDeleteid = btnAddID.replaceAll('btnadd', 'btnremove');

        var delbtn = document.getElementById(btnDeleteid);
        delbtn.classList.add("visible");
        delbtn.classList.remove("invisible");


        var addbtn = document.getElementById(btnAddID);
        addbtn.classList.remove("visible");
        addbtn.classList.add("invisible");

    }
    
</script>