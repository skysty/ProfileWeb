@model ProfileWeb.Models.ApplicationUser

@{
    ViewData["Title"] = "Портфолиоға жаңа пайдаланушы қосу";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<h1>Портфолиоға жаңа пайдаланушы қосу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="UserName" class="control-label">ЖСН</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Firstname_kz" class="control-label">Аты</label>
                <input asp-for="Firstname_kz" class="form-control" />
                <span asp-validation-for="Firstname_kz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Middlename_kz" class="control-label">Әкесінің аты</label>
                <input asp-for="Middlename_kz" class="form-control" />
                <span asp-validation-for="Middlename_kz" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label for="Lastname_kz" class="control-label">Тегі</label>
                <input asp-for="Lastname_kz" class="form-control" />
                <span asp-validation-for="Lastname_kz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Firstname_ru" class="control-label">Аты орысша</label>
                <input asp-for="Firstname_ru" class="form-control" />
                <span asp-validation-for="Firstname_ru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Middlename_ru" class="control-label">Әкесінің аты орысша</label>
                <input asp-for="Middlename_ru" class="form-control" />
                <span asp-validation-for="Middlename_ru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Lastname_ru" class="control-label">Тегі аты ағылшынша</label>
                <input asp-for="Lastname_ru" class="form-control" />
                <span asp-validation-for="Lastname_ru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Firstname_en" class="control-label">Аты ағылшынша</label>
                <input asp-for="Firstname_en" class="form-control" />
                <span asp-validation-for="Firstname_en" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label afor="Middlename_en" class="control-label">Әкесінің аты ағылшынша</label>
                <input asp-for="Middlename_en" class="form-control" />
                <span asp-validation-for="Middlename_en" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Lastname_en" class="control-label">Тегі аты ағылшынша</label>
                <input asp-for="Lastname_en" class="form-control" />
                <span asp-validation-for="Lastname_en" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label for="Firstname_tr" class="control-label">Аты түрікше</label>
                <input asp-for="Firstname_tr" class="form-control" />
                <span asp-validation-for="Firstname_tr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Middlename_tr" class="control-label">Әкесінің аты түрікше</label>
                <input asp-for="Middlename_tr" class="form-control" />
                <span asp-validation-for="Middlename_tr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Lastname_tr" class="control-label">Тегі аты түрікше</label>
                <input asp-for="Lastname_tr" class="form-control" />
                <span asp-validation-for="Lastname_tr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PasswordHash" class="control-label">Құпия сөз</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label for="Sex_ID" class="control-label">ЖЫНЫСЫ:</label>
                <select asp-for="Sex_ID" class="form-control" asp-items="ViewBag.Sex"></select>
                <span asp-validation-for="Sex_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сақтау" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Артқа қайту</a>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}