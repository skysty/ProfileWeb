@model ProfileWeb.ViewModel.QulificationViewModel

@{
    ViewData["Title"] = "Біліктілікті өзгерту";
}

<h1></h1>

<h4>Біліктілікті өзгерту </h4>
<hr />
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Біліктілікті өзгерту</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditQu" enctype="multipart/form-data">
            <input type="hidden" asp-for="QuW_Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="KZ_Qu" class="form-control" />
                        <span asp-validation-for="KZ_Qu" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> ӨЗГЕРТУ</button>
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Профильге қайту</a>
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}