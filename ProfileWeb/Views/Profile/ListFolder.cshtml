@model IEnumerable<ProfileWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Зертеу жұмыстар тізімі | Ахмет Ясауи Университеті";
}

<main class="m-30">
    <div class="flex flex-between p-30 br-5 bgc-lightGrey">
        <div>
            <a class="c-darkRed" href="">ОПҚ ТІЗІМІ</a>
            /
            <a class="c-darkGrey disabled" href="">ОҚЫТУШЫ-ПРОФЕССОР ПОРТФОЛИОСЫ</a>
        </div>
        <a class="c-darkRed" target="_blank" href="https://www.youtube.com/watch?v=-SbFWF5az1g">ВИДЕО НҰСҚАУЛЫҚ</a>
    </div>
    @foreach (var item1 in Model)
    {
    <div class="p-30">
        <h3 class="d-inline-block mr-5 fs-17">ЗЕРТТЕУ ЖҰМЫСТАР / ЖАРИЯЛАНЫМДАР ТІЗІМІ</h3>
        <a class="py-5 px-10 c-white br-5 bgc-yellow c-darkGrey fs-13 bsh-grey-hover" asp-action="CreateProfile" asp-route-id="@item1.Id">ҚОСУ</a>
    </div>
    }
    @foreach (var item in Model)
    {
    <div class="p-30 br-5 bgc-lightGrey">
        @foreach(var itemi in item.Researches)
        {
        <div class="d-block mt-10 mb-10">
            <h2 class="d-inline mr-5 fs-17 ff-body-regular c-darkRed">@Html.DisplayFor(modelItem => itemi.KZ_Title)</h2>
            <a class="py-5 px-10 c-darkGrey br-5 bgc-white fs-13 bsh-grey-hover" href="~/documents/@itemi.FileUrl" target="_blank" asp-append-version="true">КӨРУ</a>
            <a class="py-5 px-10 c-darkGrey br-5 bgc-yellow fs-13 bsh-grey-hover" asp-action="EditProfile" asp-route-id="@itemi.Res_Id">ӨЗГЕРТУ</a>
            <a class="py-5 px-10 c-white br-5 bgc-darkRed fs-13 bsh-grey-hover" asp-action="DeleteProfile" asp-route-id="@itemi.Res_Id">ЖОЮ</a>
        </div>
        }
    </div>
    }
    @foreach (var item1 in Model)
    {
    <div class="pt-30 pl-30">
        <a class="c-darkRed" asp-action="Details" asp-route-id="@item1.Id">ПОРТФОЛИОҒА ҚАЙТУ</a>
    </div>
    }
</main>
